<div class="container py-5" style="background-color: #fff7e6">

    <div class="row">
      <div class="col-md-12">
        <h5 class="mb-4">"<%= @keyword %>" の検索結果 <%= @breads.count %>件</h5>
        <% if @keyword.present? %>
          <ul class="row ml-2" style="list-style: none;">
            <% @breads.each do |bread| %>
              <li class="mr-1">
                <div>
                  <%= link_to admin_bread_path(bread.id) do %>
                    <%= image_tag bread.get_bread_image(180, 180) %><br>
                  <% end %>
                  <%= bread.bread_name %>
                </div>
              </li>
            <% end %>
          </ul>
        <% else %>
        <p>該当のパンは見つかりませんでした</p>
        <% end %>
      </div>
    </div>

</div>