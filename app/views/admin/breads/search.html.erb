<div class="container pt-5">

    <%= form_with url: search_admin_breads_path, local: true, method: :get do |f| %>
      <%= f.text_field :keyword, placeholder: "パン名を入力" %>
      <%= f.submit "検索", class:"btn btn-sm btn-secondary" %>
    <% end %>

    <div class="row">
      <div class="col-9">
        <h5 class="mb-4">"<%= @keyword %>" の検索結果 <%= @shops.count %>件</h5>
        <% if @keyword.present? %>
          <ul class="row" style="list-style: none;">
            <% @breads.each do |bread| %>
              <li class="mr-1">
                <div>
                  <%= link_to admin_bread_path(bread.id) do %>
                    <%= image_tag bread.get_bread_image(180, 180) %><br>
                  <% end %>
                  <%= bread.bread_name %>
                </div>
              </li>
            <% end %>
          </ul>
        <% else %>
        <p>該当のパンは見つかりませんでした</p>
        <% end %>
      </div>
    </div>

</div>