<div class="container mt-10 mx-auto">

  <div class="md-3">
    <h5><%= @user.name %>さんのユーザー詳細 </h5>
  </div>

  <div class="row">
    <div class="col-md-3">
      <p>会員ID</p>
      <p>ニックネーム</p>
      <p>メールアドレス</p>
      <p>現在のステータス</p>
    </div>

    <div class="col-md-6">
      <p><%= @user.id %></p>
      <p><%= @user.name %></p>
      <p><%= @user.email %></p>
      <% if @user.is_delete == false %>
        <div  class="text-success">
          有効
        </div>
      <% else %>
        <div class="text-danger">
          退会
        </div>
      <% end %>
    </div>
  </div>


  <h5 class="mt-5"><%= @user.name %>さんの投稿一覧</h5>
  <table>
    <% if @breads.exists? %>
      <% @breads.each do |bread| %>
        <td>
          <%= link_to admin_bread_path(bread.id) do %>
            <%= image_tag bread.get_bread_image(100, 100) %><br>
          <% end %>
          <%= bread.bread %>
        </td>
      <% end %>
    <% else %>
      <p>投稿はありません</p>
    <% end %>
  </table>


  <%= link_to "ユーザー一覧に戻る", admin_users_path %>

</div>