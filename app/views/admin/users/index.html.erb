<div class="container pt-5">

  <div class="col-md-10 mx-auto">

    <h5>ユーザー一覧</h5>

    <table class="table mt-4">
      <tr>
        <th>ID</th>
        <th>ユーザーネーム</th>
        <th>メールアドレス</th>
        <th>投稿</th>
        <th>ステータス</th>
      </tr>

        <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td>
          <%= link_to admin_user_path(user.id) do %>
            <%= user.name %>
          <% end %>
        </td>
        <td><%= user.email %></td>
        <td><%= user.bread.count %> posts</td>
        <td>
          <% if user.is_delete == false %>
            <div class="text-success">
             有効
            </div>
          <% else %>
            <div class="text-danger">
             退会
            </div>
          <% end %>
        </td>
      </tr>
        <% end %>
    </table>



  </div>
</div>