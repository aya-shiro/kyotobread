<div class="main-theme container py-5">

  <div class="row">
    <div class="col-md-10">
      <h5 class="ml-2 mb-3">Drinkアイコン一覧</h5>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3">
      <p>デフォルトドリンク</p>
      <div class="p-3 mb-3" style="background-color: white;">
        <p>#コーヒー</p>
        <p>#紅茶</p>
        <p>#牛乳</p>
        <p>#お茶</p>
      </div>
    </div>

    <div class="col-md-5 ml-3">
      <span>Othersの選択肢を増やす</span>

      <%= render 'layouts/errors', obj: @drink %>

      <%= form_with model: @drink, url: admin_drinks_path, method: :post, class:"mt-2" do |f| %>
        <%= f.text_field :drink_name, class:"mb-4" %>
        <%= f.submit "登録する", "data-confirm" => "新しいドリンクを登録しますか？増やした項目は削除できません(名称変更は可能)", class:"btn btn-sm btn-danger" %>
      <% end %>

        <% @drinks.not_default.each do |drink| %>    <!--上で登録したドリンクのみ-->
          <span class="mt-3"><%= drink.drink_name %></span><br>
          <%= form_with model: @drink, url: admin_drink_path(drink), method: :patch, class:"mb-3" do |f| %>
            <%= f.text_field :drink_name %>
            <%= f.submit "書き換える", class:"btn btn-sm btn-outline-danger" %>
          <% end %>

        <% end %>
    </div>




  </div>
</div>