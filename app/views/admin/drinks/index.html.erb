<div class="container pt-4">
  <!--<div class="col-md-12 mx-auto">-->

  <div class="row">
    <div class="col-md-10">
      <h5 class="mb-3">Drinkアイコン一覧</h5>
    </div>
  </div>

  <%#= flash[:notice] %>

  <div class="row">
    <div class="col-md-3">
      <p>デフォルトドリンク</p>
      <div  class="border p-3">
        <p>#コーヒー</p>
        <p>#紅茶</p>
        <p>#牛乳</p>
        <p>#お茶</p>
      </div>
    </div>

    <div class="col-md-5 ml-3">
      <p>Othersの選択肢を増やす</p>

      <%= form_with model: @drink, url: admin_drinks_path, method: :post do |f| %>
        <%= f.text_field :drink_name %>
        <%= f.submit "登録する", class:"btn btn-sm btn-secondary" %>
      <% end %>

      <% if @drink.drink_name == Drink.not_default %>  <!--もし上で登録したドリンクだった場合-->
        <% @drinks.each do |drink| %>
          <p class="mt-3">
            <%= link_to "✕", admin_drink_path(drink), method: :delete, class:"btn btn-sm btn-outline-danger" %>
            <%= drink.drink_name %>
          </p>
        <% end %>
      <% end %>
    </div>


  </div>
</div>