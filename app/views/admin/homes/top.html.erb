<!--管理者ページ-->
<div class="container py-5" style="background-color: #fff7e6">

  <div class="row">
    <div class="col-md-7">
      <div class="mb-4 border p-3">
        <span>現在の有効ユーザー：　<%= @valid_users.count %> users</span>
        <span class="ml-5">現在の投稿パン：　<%= Bread.count %> posts</span>
      </div>
    </div>
  </div>

  <h5 class="ml-1">新着投稿一覧</h5>
  <ul class="row col-md-12 mx-auto" style="list-style: none;">
      <% @breads.each_with_index do |bread, index| %>
        <% if index < 10 %>
          <li class="mr-1" style="overflow: hidden; text-overflow: ellipsis; white-space: nowrap; max-width: 100px;">
            <%= link_to admin_bread_path(bread.id) do %>
              <%= image_tag bread.get_bread_image(100, 100) %>
              <p style="color: black;"><%= bread.bread_name %></p>
            <% end %>
          </li>
        <% end %>
      <% end %>
      <% if @breads.count > 10 %>
        <div class="text-right">
          <%= link_to "もっとみる>", admin_breads_path %>
        </div>
      <% end %>
    </ul>
  </div>

</div>