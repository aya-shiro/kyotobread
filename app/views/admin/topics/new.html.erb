<div class="container mt-4">
  <div class="col-md-6 mx-auto">

    <h3>特集新規登録</h3>
    <%= form_with model: @topic, url: admin_topics_path do |f| %>
      <%= f.file_field :画像 %><br>
      <%= f.label :タイトル %><br>
      <%= f.text_field :title, class:'form-control' %><br>
      <%= f.label :本文 %><br>
      <%= f.text_area :body, rows: 4, class:'form-control' %><br>

      <%= f.submit "特集を保存する", class:"btn btn-secondary mt-3" %>
    <% end %>

    <p><%= link_to "特集一覧ページに戻る", admin_topics_path, class:"mt-5 btn btn-sm btn-outline-secondary" %></p>


  </div>
</div>