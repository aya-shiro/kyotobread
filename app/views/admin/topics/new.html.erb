<div class="container pt-5">
  <div class="col-md-8 mx-auto">

    <h5 class="mb-4">特集新規登録</h5>

    <%= render 'layouts/errors', obj: @topic %>

    <%= form_with model: @topic, url: admin_topics_path do |f| %>
      <%= f.file_field :画像 %><br>
      <%= f.label :タイトル, class:"mt-4" %><br>
      <%= f.text_field :title, class:'form-control', placeholder: "*25文字以内" %><br>
      <%= f.label :本文 %><br>
      <%= f.text_area :body, rows: 16, class:'form-control' %><br>

      <%= f.submit "特集を保存する", class:"btn btn-secondary" %>
    <% end %>

    <p><%= link_to "特集一覧ページに戻る", admin_topics_path, class:"mt-5 btn btn-sm btn-outline-secondary" %></p>


  </div>
</div>