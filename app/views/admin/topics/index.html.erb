<div class="main-theme container py-5">
  <div class="col-md-12 mx-auto">

    <% if flash[:notice] %>
      <div class="alert alert-secondary" role="alert">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <div class="row">
      <div class="col-md-12 mx-auto">
        <h5>特集一覧</h5>
        <p><%= link_to "特集新規登録", new_admin_topic_path, class:"btn btn-sm btn-secondary mt-2" %></p>
      </div>
    </div>

    <div class="row">
      <div class="col-md-10">
        <% @topics.each do |topic| %>
          <%= link_to admin_topic_path(topic.id), class:"text-dark" do %>
          <div style="background-color: white;" class="p-3 mb-3">
            <h5><span class="mr-2" style="font-size: 15px">No.<%= topic.id %></span><%= topic.title %></h5>
            <p style="max-width: auto;" class="sentence"><%= topic.body %></p>
            <p>
              作成日: <%= topic.created_at.strftime('%Y/%m/%d') %>
              <% if topic.is_published == false %>
                <span class="text-secondary ml-2">非公開</span>
              <% else %>
                <span class="text-success ml-2">公開中</span>
              <% end %>
            </p>
          </div>
          <% end %>
        <% end %>

        <div class="d-flex justify-content-center">
          <%= paginate @topics, theme: 'twitter-bootstrap-4' %>
        </div>

      </div>
    </div>

  </div>
</div>