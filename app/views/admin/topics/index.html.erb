<div class="container mt-4 mx-auto">
  <div class="col-md-12s mx-auto">

    <%= flash[:notice] %>

    <h5>特集一覧</h5>
    <p>
      <%= link_to "特集新規登録", new_admin_topic_path, class:"btn btn-sm btn-secondary mt-3" %>
    </p>
    <table class="table">
      <tr>
        <td>タイトル</td>
        <td>作成日</td>
      </tr>

      <% @topics.each do |topic| %>
        <tr>
          <td><%= topic.title %></td>
          <td><%= topic.created_at.strftime('%Y/%m/%d') %></td>
          <td><%= link_to "詳細", admin_topic_path(topic.id), class:"btn btn-sm btn-secondary" %></td>
          <td><%= link_to "編集", edit_admin_topic_path(topic.id), class:"btn btn-sm btn-secondary" %></td>
          <td><%= link_to "削除", admin_topic_path(topic.id), method: :delete, "data-confirm" => "本当に削除しますか？", class:"btn btn-sm btn-secondary" %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>