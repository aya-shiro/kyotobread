<h1>Admin::Topics#edit</h1>
<p>Find me in app/views/admin/topics/edit.html.erb</p>

<div class="container mt-4">
  <div class="col-md-6 mx-auto">

    <h3>特集編集</h3>
    <%= form_with model: @topic, url: admin_topic_path do |f| %>
      <%= f.label :タイトル %><br>
      <%= f.text_field :title, class:'form-control' %><br>
      <%= f.label :本文 %><br>
      <%= f.text_area :body, rows: 4, class:'form-control' %><br>

      <%= f.file_field :画像 %><br>

      <%= f.submit "特集を更新する", class:"btn btn-danger mt-3" %>
    <% end %>
    <p><%= link_to "特集一覧ページに戻る", admin_topics_path, class:"mt-5 btn btn-sm btn-outline-secondary" %></p>

  </div>
</div>