<div class="container mt-5">
  <div class="col-md-6 mx-auto">

    <h3>ショップ編集</h3>
    <%= form_with model: @shop, url: admin_shop_path do |f| %>
      <%= f.label :店名 %><br>
      <%= f.text_field :shop_name %><br>
      <%= f.label :アクセス %><br>
      <%= f.text_field :postcode %><br>
      <%= f.text_area :address %><br>
      <%= f.label :最寄り駅 %><br>
      <%= f.text_field :nearest_station %><br>
      <%= f.label :ホームページ %><br>
      <%= f.text_field :shop_url %><br>

      <%= f.submit "編集する", class:"btn btn-secondary mt-3" %>
    <% end %>


  </div>
</div>