<div class="container pt-5">

  <% if flash[:notice] %>
    <div class="alert alert-success" role="alert">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-12">
      <h5>登録ショップ一覧</h5>
      <p><%= link_to "ショップ新規登録", new_admin_shop_path, class:"btn btn-sm btn-secondary mt-3" %></p>
    </div>
  </div>
  
    <table class="table">
      <tr>
        <th>ID</th>
        <th>店名</th>
        <!--<th>郵便番号</th>-->
        <th>住所</th>
        <!--<th>最寄り駅</th>-->
        <th>ホームページ</th>
        <th>登録日</th>
        <!--<th>online</td>-->
       </tr>

      <% @shops.each do |shop| %>
        <tr>
          <td><%= shop.id %></td>
          <td>
            <%= link_to admin_shop_path(shop.id) do %>
              <%= shop.shop_name %>
            <% end %>
          </td>
          <%#= shop.postcode %>
          <td><%= shop.address %></td>
          <%#= shop.nearest_station %>
          <td><%= shop.shop_url %></td>

          <!--<td>-->
            <%# if shop.online_url.present? %>
              <%#= shop.online_url %>
            <%# end %>
          <!--</td>-->

          <td><%= shop.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>