<div class="main-theme container py-5">

  <% if flash[:notice] %>
    <div class="alert alert-success" role="alert">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-12">
      <h5>登録ショップ一覧</h5>
      <p><%= link_to "ショップ新規登録", new_admin_shop_path, class:"btn btn-sm btn-secondary mt-2" %></p>
    </div>
  </div>

    <table class="table">
      <tr>
        <th>ID</th>
        <th>店名</th>
        <th>住所</th>
        <th class="admin-shop-created_at">登録日</th>
       </tr>

      <% @shops.each do |shop| %>
        <tr>
          <td><%= shop.id %></td>
          <td>
            <%= link_to admin_shop_path(shop.id) do %>
              <%= shop.shop_name %>
            <% end %>
          </td>
          <td><%= shop.address %></td>
          <td class="admin-shop-created_at"><%= shop.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
      <% end %>
    </table>

    <div class="d-flex justify-content-center">
      <%= paginate @shops, theme: 'twitter-bootstrap-4' %>
    </div>

  </div>
</div>