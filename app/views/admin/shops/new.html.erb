<div class="main-theme container py-5">
  <div class="col-md-6 mx-auto">

    <h3>ショップ登録</h3>
    <div id="error">
      <%= render 'layouts/errors', obj: @shop %>
    </div>

    <%= form_with model: @shop, url: admin_shops_path do |f| %>
      <%= f.label :店名 %><br>
      <%= f.text_field :shop_name, class:'form-control' %><br>
      <%= f.label :アクセス %><br>
      〒<%= f.text_field :postcode, placeholder:"000-0000" %><br>
      <%= f.text_area :address, class:'mt-2 form-control', placeholder:"京都府京都市OO…" %><br>
      <%= f.label :最寄り駅 %><br>
      <%= f.text_field :nearest_station, class:'form-control' %><br>
      <%= f.label :公式リンク %><br>
      <%= f.text_field :shop_url, class:'form-control' %><br>
      <%= f.label :オンラインショップ %><br>
      <%= f.text_field :online_url, class:'form-control' %><br>

      <%= f.submit class:"btn btn-secondary my-3" %>
    <% end %>
    <%= link_to "ショップ一覧にもどる", admin_shops_path, class:"text-secondary" %>

  </div>
</div>