<div class="container py-5" style="background-color: #fff7e6">

  <div class="row">
    <div class="col-md-12">
      <h5>ご意見一覧</h5>
    </div>
  </div>

  <table class="table">
    <tr>
      <th>No</th>
      <th>ユーザーネーム</th>
      <th>ご意見</th>
      <th>投函日</th>
     </tr>

    <% @feedbacks.each do |feedback| %>
      <tr>
        <td><%= feedback.id %></td>
        <td>
          <%= link_to admin_user_path(feedback.user.id) do %>
            <%= feedback.user.name %>
          <% end %>
        </td>

        <td style="overflow: hidden; text-overflow: ellipsis; white-space: nowrap; max-width: 150px;">
          <%= link_to admin_feedback_path(feedback.id) do %>
            <%= feedback.opinion %>
          <% end %>
        </td>

        <td><%= feedback.created_at.in_time_zone('Tokyo').strftime("%Y/%m/%d %H:%M") %></td>
      </tr>
    <% end %>
  </table>





</div>