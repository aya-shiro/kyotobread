<div class="container mt-4">
  <h4>マイページ</h4>

  <div class="row">
    <div class="col-md-3">
      <%= image_tag current_user.get_user_image(200, 200) %>
    </div>
    <div class="col-md-6">
      <h5><%= current_user.name %></h5>
      <%= current_user.email %><br>
      <%= current_user.user_info %><br>
      <%= link_to "プロフィールの編集", users_mypage_edit_path(current_user.id), class:"mt-3 btn btn-sm btn-outline-secondary" %>
    </div>
  </div>

  <h5 class="mt-5">投稿一覧</h5>

  <table>
  <% if @breads.exists? %>
    <tbody>
      <% @breads.each_with_index do |bread, index| %>
        <% if index < 8 %>
          <td>
            <%= link_to bread_path(bread.id) do %>
              <%= image_tag bread.get_bread_image(100, 100), class:"mr-2" %><br>
            <% end %>
            <%= bread.bread_name %>
          </td>
        <% end %>
      <% end %>

      <% if @breads.count > 8 %>
            <td colspan="4">
              <%= link_to "more>", breads_path, class:"ml-5 mb-4 btn btn-outline-primary" %>
            </td>
      <% end %>
    </tbody>
  <% else %>
    <p>投稿はありません</p>
  <% end %>
</table>

</div>