<div class="container py-5" style="background-color: #fff7e6">

  <div class="row">
    <div class="col-md-3">
      <%= image_tag @user.get_user_image(200, 200), class:"rounded-circle" %>
    </div>
    <div class="col-md-6 mt-4">
      <h5><%= @user.name %></h5>
      <% if @user == current_user && @user.name != "ゲスト" %>  <!--ゲストでないログインユーザの場合-->
        <%= @user.email %><br>
      <% end %>
      <%= @user.user_info %><br>
      <% if @user == current_user && @user.name != "ゲスト" %>
        <%= link_to "プロフィールの編集", users_mypage_edit_path, class:"mt-3 btn btn-sm btn-outline-secondary" %><br>
      <% end %>
      <% if @user == current_user %>
        <%= link_to favorites_index_path, class:"mt-3 btn btn-sm btn-outline-danger" do  %>
          <i class="fas fa-heart"></i>
        <% end %>
       <% end %>
    </div>
  </div>

  <div class="row ml-1">
    <h5 class="mt-5 mb-3"><%= @user.breads.count %> posts</h5>
  </div>
  <div>
    <ul class="row ml-1" style="list-style: none;">
      <% @breads.each do |bread| %>
        <li class="mr-1" style="overflow: hidden; text-overflow: ellipsis; white-space: nowrap; max-width: 220px;">
          <%= link_to bread_path(bread.id) do %>
            <div><%= image_tag bread.get_bread_image(220, 220) %></div>
            <p class="text-dark"><%= bread.bread_name %></p>
          <% end %>
        </li>
      <% end %>
    </ul>

    <div class="d-flex justify-content-center">
      <%= paginate @breads %>
    </div>

  </div>

</div>