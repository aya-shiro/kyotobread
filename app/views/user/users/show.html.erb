<div class="container mt-4">

  <div class="row">
    <div class="col-md-3">
      <%= image_tag @user.get_user_image(200, 200) %>
    </div>
    <div class="col-md-6">
      <h5><%= @user.name %></h5>
      <%= @user.email %><br>
      <%= @user.user_info %><br>
      <% if @user == current_user %>
        <%= link_to "プロフィールの編集", users_mypage_edit_path, class:"mt-3 btn btn-sm btn-outline-secondary" %><br>
        <%= link_to favorites_show_path, class:"mt-3 btn btn-sm btn-outline-secondary" do  %>
          いいね<i class="fa-solid fa-heart" style="color: #ff0088;"></i>
        <% end %>
       <% end %>
    </div>
  </div>

  <h5 class="mt-5">
    <i class="fa-solid fa-bread-slice" style="color: #b4660e;"></i> <%= @user.bread.count %> posts
  </h5>

  <div class="row">
    <div class="col-6">
      <table>
        <% if @breads.exists? %>
          <% @breads.each do |bread| %>
          <td>
            <%= link_to bread_path(bread.id) do %>
              <%= image_tag bread.get_bread_image(200, 200) %>
            <% end %>
            <%= bread.bread_name %>
          </td>
          <% end %>
        <% else %>
          <p>投稿はありません</p>
        <% end %>
      </table>
    </div>
  </div>

</div>