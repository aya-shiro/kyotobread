<div class="container mt-4 mx-auto">

  <div class="row">
    <div class="col-md-3">
      <%= image_tag @user.get_user_image(200, 200) %>
    </div>
    <div class="col-md-6">
      <h5><%= @user.name %></h5>
      <%= @user.email %><br>
      <%= @user.user_info %><br>
      <% if @user == current_user %>
        <%= link_to "プロフィールの編集", users_mypage_edit_path, class:"mt-3 btn btn-sm btn-outline-secondary" %><br>
        <%= link_to favorites_show_path, class:"mt-3 btn btn-sm btn-outline-danger" do  %>
          <i class="fa-solid fa-heart"></i>
        <% end %>
       <% end %>
    </div>
  </div>

  <div class="row">
    <h5 class="mt-5 mb-3"><%= @user.bread.count %> posts</h5>
  </div>
  <div>
    <ul class="row" style="list-style: none;">
      <% @breads.each do |bread| %>
        <li class="mr-1">
          <%= link_to bread_path(bread.id) do %>
            <div><%= image_tag bread.get_bread_image(220, 220) %></div>
            <p><%= bread.bread_name %></p>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>

</div>