<div class="main-theme container py-5">
  <div class="col-md-6 mx-auto">
    <h5>プロフィール編集</h5>

    <div id="user_error">
      <%= render 'layouts/errors', obj: @user %>
    </div>

    <%= form_with model: @user, url: users_mypage_edit_path, method: :patch, local: false do |f| %>
      <%= f.file_field :user_image, class:"mt-3" %><br>
      <%= f.label :ユーザーネーム, class:"mt-3", placeholder: "*10文字以内" %><br>
      <%= f.text_field :name, class:'form-control' %><br>
      <%= f.label :自己紹介 %><br>
      <%= f.text_area :user_info, class:'form-control', placeholder: "*100文字以内", rows: 4, cols: 60 %><br>

      <%= f.submit "変更を保存する", class:"mt-3 btn btn-secondary" %>
    <% end %>

    <div>
      <% if user_signed_in? && @user == current_user %>
          <%= link_to "アカウント情報の編集", edit_user_registration_path, class: "text-secondary" %>
      <% end %>
    </div>
  </div>
</div>