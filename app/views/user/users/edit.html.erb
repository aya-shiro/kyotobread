<div class="container mt-4">
  <div class="col-md-12">
    <h5>プロフィール編集</h5>

    <%= form_with model: @user, url: users_mypage_edit_path, method: :patch do |f| %>
      <%= f.file_field :user_image, class:"mt-3" %><br>
      <%= f.label :ユーザーネーム, class:"mt-3" %><br>
      <%= f.text_field :name %><br>
      <%= f.label :自己紹介, class:"mt-3" %><br>
      <%= f.text_area :user_info, rows: 4, cols: 60 %><br>

      <%= f.submit "変更を保存する", class:"mt-3 btn btn-secondary" %>
    <% end %>

    <%= link_to "退会について", users_check_path, class:"mt-3 btn btn-sm btn-outline-danger" %>

  </div>
</div>