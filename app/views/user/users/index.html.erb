<div class="main-theme container py-5">

  <div class="row ml-4">
    <h5>ユーザー一覧</h5>
  </div >

  <div class="row mx-4">
    <% @users.each do |user| %>
      <div class="col-sm-10 col-md-12 mx-auto mt-3 bg-white">
        <%= link_to user_path(user.id), class:"d-flex align-items-center py-3" do %>
          <%= image_tag user.get_user_image(100, 100), class:"mr-3 rounded-circle" %>
          <div class="text-dark">
            <span>
              <%= user.name %><br>
              <%= user.breads.count %> posts
            </span>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="d-flex justify-content-center pt-3">
    <%= paginate @users, theme: 'twitter-bootstrap-4' %>
  </div>

</div>