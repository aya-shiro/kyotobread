<div class="container pt-5">
  <div class="col-md-10 mx-auto">
    <h5>ユーザー一覧</h5>

    <% @users.each do |user| %>
      <div class="row mt-5 border">
        <div class="col-md-2">
          <%= link_to user_path(user.id) do %>
            <%= image_tag user.get_user_image(100, 100), class:"my-4 ml-3" %>
          <% end %>
        </div>
        <div class="col-md-6 mt-4">
          <%= link_to user_path(user.id) do %>
            <h5><%= user.name %></h5>
          <% end %>
          <%= user.bread.count %> posts

        </div>
      </div>
    <% end %>

　</div>
</div>