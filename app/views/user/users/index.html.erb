<div class="container mt-4">
  <div class="col-md-10 mx-auto">
    <h5>ユーザー一覧</h5>


<% @users.each do |user| %>
  <div class="row mt-5">
    <div class="col-md-2">
      <%= link_to user_path(user.id) do %>
        <%= image_tag user.get_user_image(100, 100), class:"mb-3" %>
      <% end %>
    </div>
    <div class="col-md-6">
    <%= link_to user_path(user.id) do %>
      <h5><%= user.name %></h5>
    <% end %>
      <%= user.bread.count %> posts
    </div>
  </div>
<% end %>






</div>
</div>