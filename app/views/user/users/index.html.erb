<div class="container py-5" style="background-color: #fff7e6">
  <div class="col-md-8 mx-auto">
    <h5>ユーザー一覧</h5>

    <% @users.each do |user| %>
      <div class="row mt-3" style="background-color: white;">
        <div class="col-md-3">
          <%= link_to user_path(user.id) do %>
            <%= image_tag user.get_user_image(100, 100), class:"my-4 ml-3 rounded-circle" %>
          <% end %>
        </div>
        <div class="col-md-4 mt-4">
          <%= link_to user_path(user.id), class:"text-dark" do %>
            <h5><%= user.name %></h5>
            <%= user.breads.count %> posts
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="d-flex justify-content-center pt-3">
    <%= paginate @users, theme: 'twitter-bootstrap-4' %>
  </div>

</div>