<div class="main-theme container py-5 d-flex justify-content-center pt-5">

  <div class="text-center">

    <h3 class="mb-4">Log in</h3>
    
    <% if flash[:alert] %>
      <div class="text-danger mb-4">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class=" input-group">
        <span class="input-group-text" id="basic-addon1"><i class="fas fa-envelope"></i></span>
        <%= f.text_field :email, class: "form-control", placeholder: "Email", aria: {label: "Email"}, input_html: {aria_describedby: "basic-addon1"} %>
      </div>

      <br>

      <div class="input-group mb-3">
        <span class="input-group-text" id="basic-addon1"><i class="fas fa-key"></i></span>
        <%= f.password_field :password, class: "form-control", placeholder: "Password", aria: {label: "Password"}, input_html: {aria_describedby: "basic-addon1"}, autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class:"mt-3 btn btn-sm btn-secondary" %>
      </div>
    <% end %>

    <%= render "user/shared/links" %>

  </div>
</div>