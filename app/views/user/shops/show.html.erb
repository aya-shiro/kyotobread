<div class="container pt-5">

  <div class="row mb-3">
    <div class="col-md-6">
      <h4 class="mr-5"><%= @shop.shop_name %></h4>
    </div>
  </div>

  <dl class="row">
    <dd class="col-sm-2">店名</dd>
    <dd class="col-sm-9"><%= @shop.shop_name %></dd>
    <dd class="col-sm-2">郵便番号</dd>
    <dd class="col-sm-9">〒<%= @shop.postcode %></dd>
    <dd class="col-sm-2">住所</dd>
    <dd class="col-sm-9"><%= @shop.address %></dd>
    <dd class="col-sm-2">最寄り駅</dd>
    <dd class="col-sm-9"><%= @shop.nearest_station %></dd>
    <dd class="col-sm-2">公式リンク</dd>
    <dd class="col-sm-9"><%= @shop.shop_url %></dd>
    <dd class="col-sm-2">オンラインショップ</dd>
    <dd class="col-sm-9"><%= @shop.online_url %></dd>
    <dd class="col-sm-2">登録日</td>
    <dd class="col-sm-9"><%= @shop.created_at.strftime('%Y/%m/%d') %></td>
    <div class="pt-4"><%= link_to "ショップ一覧に戻る", shops_path, class:"btn btn-outline-primary btn-sm" %></div>
  </dl>

  <div class="row mt-5">
    <div class="col-md-6">
      <h5><%= @shop.shop_name %> のパン一覧<h5>
    </div>
  </div>

  <div>
    <ul class="row" style="list-style: none;">
      <% @breads.each do |bread| %>
        <li class="mr-1" style="overflow: hidden; text-overflow: ellipsis; white-space: nowrap; max-width: 220px;">
          <%= link_to bread_path(bread.id) do %>
            <div><%= image_tag bread.get_bread_image(220, 220) %></div>
            <p style="color: black;"><%= bread.bread_name %></p>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>

</div>