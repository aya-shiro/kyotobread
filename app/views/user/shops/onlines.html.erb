<div class="container pt-4">
  <!--<div class="col-md-12s mx-auto">-->

    <h5>オンラインショップ一覧</h5>

    <table class="table mt-4">
      <tr>
        <th>店名</th>
        <th>オンラインショップ</th>
        <td>公式リンク</td>
      </tr>

      <% @shops.each do |shop| %>
        <% if shop.online_url.present? %>    <!--online_shopがある店名のみ表示-->
          <tr>
            <td>
              <%= link_to shop_path(shop.id) do %>
                <%= shop.shop_name %>
              <% end %>
            </td>
            <td><%= shop.online_url %></td>
            <td><%= shop.shop_url %></td>
          </tr>
        <% end %>
      <% end %>

    </table>

  <!--</div>-->
</div>