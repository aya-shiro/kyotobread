<div class="container py-5" style="background-color: #fff7e6">

    <h5>オンラインショップ一覧</h5>

    <table class="table mt-4">
      <tr>
        <th>店名</th>
        <th>オンラインショップ</th>
        <td>公式リンク</td>
      </tr>

      <% @shops.each do |shop| %>
        <% if shop.online_url.present? %>    <!--online_shopがある店名のみ表示-->
          <tr>
            <td>
              <%= link_to shop_path(shop.id) do %>
                <%= shop.shop_name %>
              <% end %>
            </td>
            <td><%= Rinku.auto_link(shop.online_url, :all, 'target="_blank"').html_safe %></td>
            <td><%= Rinku.auto_link(shop.shop_url, :all, 'target="_blank"').html_safe %></td>
          </tr>
        <% end %>
      <% end %>

    </table>

</div>