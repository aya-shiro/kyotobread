<div class="main-theme container d-flex py-5 justify-content-center pt-5">

  <div class="text-center">

    <h3 class="mb-4">Sign up</h3>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "user/shared/error_messages", resource: resource %>

      <% if flash[:alert] %>
        <div class="text-danger mb-4">
          <%= flash[:alert] %>
        </div>
      <% end %>

      <div class="input-group">
        <span class="input-group-text" id="basic-addon1"><i class="fas fa-user"></i></span>
        <%= f.text_field :name, class: "form-control", placeholder: "Username", aria: {label: "Username"}, input_html: {aria_describedby: "basic-addon1"} %>
      </div>

      <br>

      <div class="input-group mb-3">
        <span class="input-group-text" id="basic-addon1"><i class="fas fa-envelope"></i></span>
        <%= f.text_field :email, class: "form-control", placeholder: "Email", aria: {label: "Email"}, input_html: {aria_describedby: "basic-addon1"} %>
      </div>

      <em>(<%= @minimum_password_length %> characters minimum)</em>


      <div class="input-group mb-3">
        <span class="input-group-text" id="basic-addon1"><i class="fas fa-key"></i></span>
        <%= f.password_field :password, class: "form-control", placeholder: "Password", aria: {label: "Password"}, input_html: {autocomplete: "new-password", aria_describedby: "basic-addon1"} %>
      </div>

      <div class="input-group mb-3">
        <span class="input-group-text" id="basic-addon2"><i class="fas fa-key"></i></span>
        <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm Password", autocomplete: "new-password", aria: {label: "Confirm Password"}, input_html: {aria_describedby: "basic-addon2"} %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class:"mt-3 btn btn-sm btn-secondary" %>
      </div>
    <% end %>

    <%= render "user/shared/links" %>

  </div>
</div>