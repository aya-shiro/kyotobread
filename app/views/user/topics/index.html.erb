<div class="container pt-5">
  <div class="col-md-10 mx-auto">


    <h5>特集一覧</h5>

    <table class="table">
      <tr>
        <th>タイトル</th>
        <th>作成日</th>
        <th></th>
      </tr>

      <% @topics.each do |topic| %>
        <tr>
          <td>
            <%= link_to topic_path(topic.id) do %>
              <%= topic.title %>
            <% end %>
          </td>
          <td><%= topic.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>