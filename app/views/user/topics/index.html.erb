<div class="container mt-4 mx-auto">
  <div class="col-md-12s mx-auto">


    <h5>特集一覧</h5>

    <table class="table">
      <tr>
        <td>タイトル</td>
        <td>作成日</td>
      </tr>

      <% @topics.each do |topic| %>
        <tr>
          <td><%= topic.title %></td>
          <td><%= topic.created_at.strftime('%Y/%m/%d') %></td>
          <td><%= link_to "詳細", topic_path(topic.id), class:"btn btn-sm btn-secondary" %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>