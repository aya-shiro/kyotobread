<div class="container mt-4">
  <div class="row mx-auto">
      <div class="row">
    <!--homes/topと部分テンプレート化-->
      <div class="col-3">
        <div class="border p-3" >
        <h5>探す</h5>
        <p>ジャンルで探す</p>
        <p>ランキングから探す</p>
      </div>

        <div class="border p-3 mt-3">
          <h5>ONLINE SHOP</h5>
          <ul>
            <% @shops.each do |shop| %>
              <% if shop.online_url.present? %>    <!--online_shopがある店名のみ表示-->
                <li style="list-style: none;">
                  <%= link_to shop_path(shop.id) do %>
                    <%= shop.shop_name %>
                  <% end %>
                </li>
              <% end %>
            <% end %>
          </ul>
        </div>

        <div class="border p-3 mt-3">
        <h5>特集</h5>
        <% @topics.each do |topic| %>
          <%= link_to admin_topic_path(topic.id) do %>
          <ul>
            <li style="color: black;"><%= topic.title %></li>
            <li style="color: gray; font-size: 12px; list-style: none;">(<%= topic.created_at.strftime('%Y/%m/%d') %>)</li>
          </ul>
          <% end %>
        <% end %>
        </div>
      </div>
    <!--ここまで部分テンプレート化-->

      <div class="col-9">
        <h5 class="mb-4">"<%= @keyword %>" の検索結果 <%= @breads.count %>件</h5>
        <% if @keyword.present? %>
          <ul class="row" style="list-style: none; text-align: right;">
            <% @breads.each do |bread| %>
              <li class="mr-1">
                <div>
                  <%= link_to bread_path(bread.id) do %>
                    <%= image_tag bread.get_bread_image(180, 180) %><br>
                  <% end %>
                  <%= bread.bread_name %>
                </div>
              </li>
            <% end %>
          </ul>
        <% else %>
        <p>該当のパンは見つかりませんでした</p>
        <% end %>
      </div>
  </div>
</div>
