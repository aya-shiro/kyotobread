<div class="container mt-4">
  <div class="row mx-auto">
    <div class="col-10">

        <% if @coffee_breads.present? %>
          <h5>コーヒーにおすすめのパン</h5>
          <ul class="row" style="list-style: none; text-align: right;">
            <% @coffee_breads.each do |coffee| %>
              <li class="mr-1">
                <div>
                  <%= link_to bread_path(coffee.id) do %>
                    <%= image_tag coffee.get_bread_image(200, 200) %><br>
                  <% end %>
                  <%= coffee.bread_name %>
                </div>
              </li>
            <% end %>
          </ul>
        <% end %>

