<script>
  $(function(){
    $(window).scroll(function(){
      var scrollPosition = $(this).scrollTop();
      $('.about-image').each(function(){
        var offset = $(this).offset().top;
        if (scrollPosition > offset - $(window).height() + 200) {
          $(this).addClass('fade-in');
        }
      });
    });
  });
</script>