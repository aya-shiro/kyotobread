<div class="container mt-4">
  <div class="mx-auto">
    <div class="row">

      <div class="col-3">
        <div class="border p-3" >
        <h5>探す</h5>
        <p>おすすめドリンクから探す</p>
     　  <span class="btn">
          <%= form_with model: @bread, url:breads_path, method: :get do |f| %>
            <%#= f.submit "コーヒー", :drink_name => "drink_name" %>
            <%#= f.submit "紅茶", :drink_name => "drink_name" %>
            <%#= f.submit "牛乳", :drink_name => "drink_name" %>
            <%#= f.submit "お茶", :drink_name => "drink_name" %>
            <%#= f.submit "その他", :drink_name => "drink_name" %>
            <%= f.select :drink_name, options_from_collection_for_select(Drink.default, :id, :drink_name) %>
            <%#= f.select :drink_name, options_from_collection_for_select(Drink.default, Drink.not_default :id, :drink_name, :other_drink_name) %>
            <%= f.submit "探す" %>
            <%#= f.hidden_field :drink_name %>
          <% end %>
        </span>
        <p>人気パン(いいねが多い順)</p>
      </div>

      <div class="border p-3 mt-3">
        <h5>ONLINE SHOP</h5>
        <ul>
          <% @shops.each do |shop| %>
            <% if shop.online_url.present? %>    <!--online_shopがある店名のみ表示-->
              <li style="list-style: none;">
                <%= link_to shop_path(shop.id) do %>
                  <%= shop.shop_name %>
                <% end %>
              </li>
            <% end %>
          <% end %>
        </ul>
      </div>

      <div class="border p-3 mt-3">
        <h5>特集</h5>
        <% @topics.each do |topic| %>
          <%= link_to admin_topic_path(topic.id) do %>
          <ul>
            <li style="color: black;"><%= topic.title %></li>
            <li style="color: gray; font-size: 12px; list-style: none;">(<%= topic.created_at.strftime('%Y/%m/%d') %>)</li>
          </ul>
          <% end %>
        <% end %>
        </div>
      </div>

      <div class="col-9">
        <ul class="row" style="list-style: none; text-align: right;">
          <% @breads.each do |bread| %>
            <li class="mr-1">
              <div>
                <%= link_to bread_path(bread.id) do %>
                  <%= image_tag bread.get_bread_image(180, 180) %><br>
                <% end %>
                <%= bread.bread_name %>
              </div>
            </li>
          <% end %>
        </ul>
      </div>

    </div>
  </div>
</div>