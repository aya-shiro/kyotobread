<div class="container mt-4">
  <div class="mx-auto">
    <div class="row">

      <div class="col-3">
        <div class="border p-3" >
        <p>ドリンクから探す</p>
        <ul>
          <!--drink_idに":"をつけることで、どのdrink_nameを参照するか区別できる-->
          <li class="btn btn-sm">
            <%= link_to breads_path(drink_id: @coffee.id), method: :get do %>
              <span><i class="fa-solid fa-mug-saucer" style="color: #240a0a;"></i></span>
              <div style="font-size: 5px;">コーヒー</div>
            <% end %>
          </li>
          <li class="btn btn-sm">
            <%= link_to breads_path(drink_id: @tea.id), method: :get do %>
              <span><i class="fa-solid fa-mug-saucer" style="color: #d70f0f;"></i></span>
              <div style="font-size: 5px;">紅茶</div>
            <% end %>
          </li>
          <li class="btn btn-sm">
            <%= link_to breads_path(drink_id: @milk.id), method: :get do %>
              <span> <i class="fa-solid fa-mug-saucer" style="color: #3fabd9;"></i></span>
              <div style="font-size: 5px;">牛乳</div>
            <% end %>
          </li>
          <li class="btn btn-sm">
            <%= link_to breads_path(drink_id: @tya.id), method: :get do %>
              <span><i class="fa-solid fa-mug-saucer" style="color: #239c21;"></i></span>
              <div style="font-size: 5px;">お茶</div>
            <% end %>
          </li>
          <%= form_with model: @bread, url:breads_path, method: :get do |f| %>
            <i class="fa-solid fa-mug-saucer" style="color: #f9f110;"></i>
            <%= f.submit "探す", class:"mb-1 btn btn-sm btn-secondary" %>
            <%= f.select :drink_id, options_from_collection_for_select(Drink.not_default.order(id: :desc), :id, :drink_name) %>
          <% end %>
        </ul>
      </div>

      <div class="border p-3 mt-3">
        <h5>ONLINE SHOP</h5>
        <ul>
          <% @shops.each do |shop| %>
            <% if shop.online_url.present? %>    <!--online_shopがある店名のみ表示-->
              <li style="list-style: none;">
                <%= link_to shop_path(shop.id) do %>
                  <%= shop.shop_name %>
                <% end %>
              </li>
            <% end %>
          <% end %>
        </ul>
      </div>

      <div class="border p-3 mt-3">
        <h5>特集</h5>
        <% @topics.each do |topic| %>
          <%= link_to admin_topic_path(topic.id) do %>
          <ul>
            <li style="color: black;"><%= topic.title %></li>
            <li style="color: gray; font-size: 12px; list-style: none;">(<%= topic.created_at.strftime('%Y/%m/%d') %>)</li>
          </ul>
          <% end %>
        <% end %>
        <%= link_to "もっとみる>", topics_path %>
        </div>
      </div>

    <!--app/assets/stylesheets/user/homes.scss併用-->
    <div class="wrap">
      <ul id="tab-menu">
        <li><a href="#tab1" class="active">ALL</a></li>
        <li><a href="#tab2" class="">SWEET</a></li>
        <li><a href="#tab3" class="">SALT</a></li>
        <li><a href="#tab4" class="">いいね順</a></li>
      </ul>

      <div id="tab-contents">
        <div id="tab1" class="tab">
          <h3>タブ1　ALL</h3>
          <div class="col-9">
            <ul class="row" style="list-style: none; text-align: right;">
              <% @breads.each do |bread| %>
                <li class="mr-1">
                  <div>
                    <%= link_to bread_path(bread.id) do %>
                      <%= image_tag bread.get_bread_image(180, 180) %><br>
                    <% end %>
                    <%= bread.bread_name %>
                  </div>
                </li>
              <% end %>
            </ul>
          </div>
        </div>

        <div id="tab2" class="tab">
          <h3>タブ2　SWEET</h3>
          <div class="col-9">
            <ul class="row" style="list-style: none; text-align: right;">
              <% @sweet_breads.each do |sweet_bread| %>
                <li class="mr-1">
                  <div>
                    <%= link_to bread_path(sweet_bread.id) do %>
                      <%= image_tag sweet_bread.get_bread_image(180, 180) %><br>
                    <% end %>
                    <%= sweet_bread.bread_name %>
                  </div>
                </li>
              <% end %>
            </ul>
          </div>

        </div>

        <div id="tab3" class="tab">
          <h3>タブ3　SALTY</h3>
          <div class="col-9">
            <ul class="row" style="list-style: none; text-align: right;">
              <% @salty_breads.each do |salty_bread| %>
                <li class="mr-1">
                  <div>
                    <%= link_to bread_path(salty_bread.id) do %>
                      <%= image_tag salty_bread.get_bread_image(180, 180) %><br>
                    <% end %>
                    <%= salty_bread.bread_name %>
                  </div>
                </li>
              <% end %>
            </ul>
          </div>
        </div>

        <div id="tab4" class="tab">
          <h3>いいねが多い順に一覧表示</h3>
          <div class="col-9">
            <ul class="row" style="list-style: none; text-align: right;">
              <% @favorite_breads.each do |favorite_bread| %>
                <li class="mr-1">
                  <div>
                    <%= link_to bread_path(favorite_bread.id) do %>
                      <%= image_tag favorite_bread.get_bread_image(180, 180) %><br>
                    <% end %>
                    <%= favorite_bread.bread_name %>
                  </div>
                </li>
              <% end %>
            </ul>
          </div>
        </div>

      </div>
    </div>

    <script src="/javascript/packs/jquery.min.js"></script>    <!-- jQueryを読み込む -->
    <script src="/javascript/packs/kyotobread.js"></script>    <!-- kyotobread.jsを読み込む -->

    </div>
  </div>
</div>